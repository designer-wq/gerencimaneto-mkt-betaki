rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /usuarios/{doc} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /demandas/{doc} {
      allow read, write: if request.auth != null;
    }
    match /demandas_v2/{doc} {
      allow read, write: if request.auth != null;
    }
    match /cad_status/{doc} {
      allow read, write: if request.auth != null;
    }
    match /cad_tipos/{doc} {
      allow read, write: if request.auth != null;
    }
    match /cad_designers/{doc} {
      allow read, write: if request.auth != null;
    }
    match /cad_plataformas/{doc} {
      allow read, write: if request.auth != null;
    }
    match /cad_origens/{doc} {
      allow read, write: if request.auth != null;
    }
    match /historico_status/{doc} {
      allow read, write: if request.auth != null;
    }
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
